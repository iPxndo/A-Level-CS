using System;
					
public class Program
{
	public static void Main()
	{
		int count=0,max=0;
		Console.Write("Enter String: ");
		string stringInput = Console.ReadLine().ToUpper();
		
		char[] stringArray = stringInput.ToCharArray();
		for(int x=0; x<stringArray.Length; x++) {
			if(stringArray[x] == 'C') {
				count = count+1;
			}
			else {
				if(max < count) {
					max = count;
				}
			    count = 0;
			}
			
			if(stringArray[stringArray.Length-1] == 'C') {
				max = count;
			}
		}
		
		Console.WriteLine($"Longest Run of Cs = {max}");
	}
}
