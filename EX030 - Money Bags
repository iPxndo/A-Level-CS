using System;
using System.Globalization; // Why? 
using System.Threading; // Why? 

public class Program
{
	public static void Main()
	{
		//Do not delete this code, this is used to allow the currency formatting
		var culture = new System.Globalization.CultureInfo("en-GB");
		Thread.CurrentThread.CurrentCulture = culture;
		Thread.CurrentThread.CurrentUICulture = culture;
		
		double start = 0,amount=0,final=0, interest,interestAmount=0.1;
		int year;
		
		Console.Write("Enter Amount Saved Yearly: ");
		amount = Convert.ToDouble(Console.ReadLine());
		
		Console.Write("Enter Number of Years: ");
		year = Convert.ToInt32(Console.ReadLine());
		
		Console.WriteLine("\nYear\tStart\t\tPaid in\t\tInterest\tFinal");
		
		for (int x = 1; x < (year + 1); x++)
		{
			interest = interestAmount * (start + amount);
			final = start + amount + interest;
			
			Console.WriteLine("{0}\t{1:C2}\t\t{2:C2}\t\t{3:C2}\t\t{4:C2}", x, start, amount, interest, final);
			
			start = final;
		}
	}
}
