using System;
					
public class Program
{
	public static void Main()
	{
		string memWord,fName,lName,password,username,passMiddle;
		
		Console.WriteLine($"Account Generator - {DateTime.Now} \n"); 
		
		Console.Write("Enter First Name: ");
		fName = Console.ReadLine();
		
		Console.Write("Enter Last Name: ");
		lName = Console.ReadLine();
		
		Console.Write("Enter Memorable Word: ");
		memWord = Console.ReadLine();
		
		fName = fName.ToLower();
		lName = lName.ToLower();		
		memWord = memWord.ToLower();
		
		if((memWord.Length) % 2 ==0)
		{
			passMiddle = memWord.Substring((memWord.Length/2)-1, 2);
		}
		else
		{
			passMiddle = memWord.Substring((memWord.Length/2), 2);
		}		
		
		
		username = lName.Substring(0,3) + fName.Substring(fName.Length-3);
		password = memWord.Substring(0,3) + username.Substring(0,1) + username.Substring(5) + passMiddle;
		

		
		Console.WriteLine($"Username = {username}"); 
		Console.WriteLine($"Password = {password}");
	}
}
